<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="panel text-center">
        <div class="row">
          <div class="text-left">
            <h2>Mes infos</h2>
              <div class="user-infos text-center">
                <div class="user-name-infos">
                  <i class="fa fa-user"></i> <%= @profil.firstname %> <%= @profil.lastname.upcase %>
                </div>
                <div class="user-phone">
                  <i class="fas fa-mobile-alt"></i> <%= @profil.phone %>
                </div>
              </div>
          </div>
        </div>
        <%= link_to edit_profil_path(@profil), class: "btn"  do %>
          <%= "Modifier" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
