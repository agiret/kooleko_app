<div class="navbar-wagon">
  <!-- Logo -->
  <div class="logo-bloc">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "logo_kooleko_h.png", height: 50 %>
    <% end %>
    <!-- <a href="#" id="project-logo-name">KOOLEKO</a> -->
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%#= link_to "Préférences", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to settings_profil_path(@profil), class: "navbar-wagon-item navbar-wagon-link"  do %>
        <i class="fas fa-cog"></i>  <%= "Préférences" %>
      <% end %>
      <%#= link_to "A propos", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%#= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <%= image_tag "user-circle-solid.svg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profil_path(@profil) do %>
                <i class="fa fa-user"></i> <%= t(".mes-infos", default: "Mes infos") %>
              <% end %>
            </li>
            <!-- <li>
              <%#= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%#= t(".preferences", default: "Préférences") %>
              <#% end %>
            </li> -->
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Me deconnecter") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%#= link_to t(".sign_in", default: "Me connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to new_user_session_path , class:"navbar-wagon-link" do %>
        <i class="fas fa-sign-in-alt"></i>  <%= t(".sign_in", default: "Me connecter") %>
      <% end %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

